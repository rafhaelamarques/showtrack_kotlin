<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.HomeActivity">

    <TextView
        android:id="@+id/homeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/glory_regular"
        android:text="@string/home_page"
        android:textColor="@color/cor_primaria"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/buttonPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/add_serie_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_marginHorizontal="40dp">
        <TextView
            android:id="@+id/buttonText"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="40dp"
            android:text="@string/adicionar_nova_s_rie"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/glory_semibold"/>
        <ImageView
            android:id="@+id/buttonIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/buttonText"
            android:layout_centerInParent="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/circle_plus_max" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonPanel"
        android:divider="@color/transparent"
        android:layout_marginTop="10dp" />


</RelativeLayout>